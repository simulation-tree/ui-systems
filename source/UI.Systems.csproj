<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <IsAotCompatible>True</IsAotCompatible>
    <IsTrimmable>True</IsTrimmable>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <Title>UI Systems</Title>
    <Authors>popcron</Authors>
    <Company>simulation-tree</Company>
    <RepositoryUrl>https://github.com/simulation-tree/ui-systems</RepositoryUrl>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\serialization\source\Serialization.csproj"/>
    <ProjectReference Include="..\..\simulation\core\Simulation.Core.csproj"/>
    <ProjectReference Include="..\..\simulation\generator\Simulation.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\..\transforms\source\Transforms.csproj"/>
    <ProjectReference Include="..\..\clipboard\source\Clipboard.csproj"/>
    <ProjectReference Include="..\..\ui\source\UI.csproj"/>
    <ProjectReference Include="..\..\worlds\generator\Worlds.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="bin/Debug/net9.0/UI.Systems.dll" Pack="true" PackagePath="tools/debug/UI.Systems.dll" Visible="false"/>
    <Content Include="bin/Debug/net9.0/UI.Systems.xml" Pack="true" PackagePath="tools/debug/UI.Systems.xml" Visible="false"/>
    <Content Include="bin/Release/net9.0/UI.Systems.dll" Pack="true" PackagePath="tools/release/UI.Systems.dll" Visible="false"/>
    <Content Include="bin/Release/net9.0/UI.Systems.xml" Pack="true" PackagePath="tools/release/UI.Systems.xml" Visible="false"/>
    <Content Include="build/UI.Systems.targets" Pack="true" PackagePath="build/UI.Systems.targets" Visible="false"/>
  </ItemGroup>

</Project>